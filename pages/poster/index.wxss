.home-container {
  width: 100%;
  background-color: #fed406;
  height: 800rpx;
  z-index: 999;
}

.list {
  width: 100%;
  padding-top: 84rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.list-item {
  width: 550rpx;
  height: 600rpx;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 10rpx rgb(39, 202, 88);
  margin-bottom: 35rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list-l {
  flex-grow: 1;
  margin-left: 60rpx;
}

.list-l .title {
  font-size: 30rpx;
  color: #fad33a;
  width: 100%;
  margin-bottom: 20rpx;
}

.list-l .intro {
  font-size: 28rpx;
  width: 100%;
  color: #fad33a;
}

.list-r {
  flex: 0;
}

.list-r image {
  width: 200rpx;
  height: 200rpx;
  margin-left: 175rpx;
}

.list .item-goods {
  background: #e5e5e5;
  box-shadow: 0 4rpx 10rpx rgb(184, 184, 184);
}

.item-goods .list-l .title, .item-goods .list-l .intro {
  color: #fff;
}

.tips {
  color: #a6a9b0;
  font-size: 30rpx;
  text-align: center;
}

.border {
  height: 110px;
  /* border:8px solid #B4E3EF; */
  text-align: center;
  border-radius: 21%;
  z-index: 999;
  margin-top: -59rpx;
  background-color: #fff;
}

.text {
  width: 550rpx;
