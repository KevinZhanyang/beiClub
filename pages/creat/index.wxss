/**index.wxss**/
.lsi-container {
  width: 100%;
}
.tips {
  margin-top: 50rpx;
  color: #c6c7cc;
  font-size: 30rpx;
  margin-left: 40rpx;
}
.list {
  width: 690rpx;
  padding-top: 45rpx;
  display: flex;
  flex-flow: row wrap;
  margin: 0 auto;
}
.list .list-item {
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  background: #fff;
  color: #b5b8be;
  border: 1rpx solid #ebebeb;
  text-align: center;
  border-radius: 10rpx;
  margin: 10rpx;
}
.list-item.active {
  background: #2b2b2b;
  color: #fad33a;
  border: 1rpx solid #2b2b2b;
}
.form-container {
  width: 690rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgb(184, 184, 184);
  padding: 40rpx;
  box-sizing: border-box;
  margin-top: 110rpx;
}
.form-container .section {
  display: flex;
  flex-flow: row nowrap;
}
.section-l {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}
.section-l label {
  font-size: 30rpx;
  color: #b5b8be;
  margin-right: 4rpx;
}
.section-l image {
  width: 25rpx;
  height: 24rpx;
}
.section-l text {
  margin-left: 103rpx;
  font-size: 30rpx;
  color: #000000;
}
text.small {
  margin-left: 74rpx;
}
.section input {
  flex-grow: 1;
  color: #000000;
  padding-left: 30rpx;
  font-size: 30rpx;
}
.palceholder {
  color: #000000;
  font-size: 30rpx;
}
.line {
  height: 1rpx;
  background: #e9e9e9;
  margin: 40rpx 0;
}
.tips.top {
  margin-top: 30rpx;
}
.creat {
  width: 690rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fad33a;
  font-size: 30rpx;
  box-shadow: 0 4rpx 10rpx rgb(0, 0, 0);
  border-radius: 8rpx;
  margin: 0 auto;
  margin-top: 90rpx;
  background: #2b2b2b;
  margin-bottom: 50rpx;
}
