page {
  height: 100%;
}

.logo {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  padding-bottom: 70rpx;
  border-bottom: 1px dashed #d7d7d7;
  align-items: center;
  width: 690rpx;
  margin: 0 auto;
}

.logo image {
  width: 168rpx;
  height: 168rpx;
  margin-top: 100rpx;
}

.logo p {
  text-align: center;
  font-size: 40rpx;
  color: #1873e0;
  letter-spacing: 7rpx;
  margin-top:44rpx;

}

.authorcontainer {
  /* background-color: #f5f5f9; */
  height: 100vh;
}

.authorcontainer .text {
  text-align: center;
  margin-top: 70rpx;
  font-size: 34rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.authorcontainer .text-b {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 118rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.authorcontainer .text-b i {
  width: 10rpx;
  height: 10rpx;
  background: #d8d8d8;
  margin-right: 14rpx;
}

.form-box {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}

.row-wrap {
  width: 720rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  font-size: 28rpx;
  /*justify-content: space-between;*/
}

.row-wrap .label {
  width: 160rpx;
  color: #000;
}

.row-wrap .label-right {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
}

.row-wrap .label-right input {
  height: 100%;
  font-size: 28rpx;
  padding-right: 30rpx;
}

.row-wrap .right-box {
  margin-right: 30rpx;
}

.arrow-right {
  width: 15rpx;
  height: 24rpx;
}

.save-btn,
.cancel-btn {
  width: 690rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.save-btn {
  background-color: #2b2b2b;
  color: #fff;
 margin-left:30rpx;

}

button[type="default"] {
  background-color: #ffffff;
  color: #000;
}

.addr-details {
  height: auto;
  padding: 30rpx 0;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  font-size: 28rpx;
}

.addr-details .label {
  margin: auto 0 auto 0;
  width: 160rpx;
  color: #000;
}

.addr-details textarea {
  box-sizing: border-box;
  width: 480rpx;
  overflow: scroll;
}

picker {
  min-width: 20rpx;
  height: 100%;
  margin-right: 20rpx;
}

.hui {
  color: #777;
}