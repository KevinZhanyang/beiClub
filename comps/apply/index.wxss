.vertical {
  width: 3px;
  height: 18px;
  background: #1873e0;
  margin-left: 30rpx;
}

.noticeContainer {
  display: flex;
  background-color: #fdfcec;
  align-items: center;
  width: 100%;
  padding: 15rpx 30rpx;
}

.noticeImage {
  flex-shrink: 0;
  height: 30rpx;
  width: 30rpx;
}

.notice {
  color: #ff7f00;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.applyHeaderInfo {
  width: 100%;
  height: 100%;
  padding: 30rpx 20rpx;
}

.applyHeaderInfoTxt {
  float: left;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
  overflow: hidden;
  line-height: 100%;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333;
  margin-left: 48rpx;
}

.modify-form form {
  display: block;
  width: 750rpx;
  height: 100%;
}

.label-list {
  display: flex;
  width: 100%;
  height: 110rpx;
  align-items: center;
  background: #fff;
  border-bottom: 1px solid #e8e8e8;
  margin-left: 0rpx;
}

.place {
  display: flex;
  align-items: center;
  font-size: 36rpx;
}

.label-list .label {
  color: #333;
  font-size: 36rpx;
  margin-left: 30rpx;
}

.label-list input {
  padding-left: 20rpx;
  flex: 1;
  color: #333;
  font-size: 36rpx;
}

.label-list image {
  height: 80rpx;
  width: 80rpx;
}

.label-lists {
  justify-content: space-between;
}

.applyFooter {
  width: 100%;
  height: 108rpx;
  background: #fff;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.applyFooterInfoTxt {
  float: left;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
  overflow: hidden;
  line-height: 100%;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #333;
  margin-left: 30rpx;
}

.switch {
  padding-right: 35rpx;
}

.modalHead {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 235rpx;
  background: #ff7f00;
}

.modalHeadImg {
  width: 100rpx;
  height: 100rpx;
}

.modalHeadTxt {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  margin-top: 19rpx;
}

.modalContent {
  margin: 20rpx 0rpx;
}

.modalInput {
  height: 100rpx;
  border: 1px solid #E0E0E0;
  border-radius: 8rpx;
  padding-left:20rpx;
  font-size: 28rpx;
}

.modalBottom {
  font-size: 24rpx;
  color: #1E487A;
}
